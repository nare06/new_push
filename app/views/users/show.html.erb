<title></title> 
  <div class="container" class="clearfix">
    <div class="well" class="clearfix">
    <legend><%= @user.name %></legend>
    <div class="row">   
       <div class="col-lg-4">
            
                        <% if @user.avatar.present?%>
                        <%= image_tag @user.avatar.url, :size => '150x150' %>
                        <% else %>
                        <%= image_tag 'thumb_default.png', :size => '150x150' %>
                        <% end %>
                        <%= render 'shared/stats' %>               		
                        <p><%= render 'follow_form' if signed_in?%> </p>                          
                        
                    </div>              
           
            <div class="col-lg-3">
          
   <strong> Name </strong> <%=@user.name %><br>
     <strong> URL </strong> <%= link_to user_path(@user), @user %> <br>
     <strong> Posts </strong> <%= @user.microposts.count %><br>
     <a class="label label-primary">NewBee <span class="badge"><%=@user.events.count %></span></a><br><br>
     
        </div>
          <div class="col-lg-5">
             <b> About Me:</b>
             <%=@user.aboutme%>
          </div>
	 </div>
	
	</div>
	<div class="well">
	<div class="row">
	<div class="col-lg-8">	
	 <% unless @user.microposts.empty? %>  
      <%= render 'microposts/microposts' %>
    <%= will_paginate @microposts %>
   <% end %>
   </div>   
   <div class="col-lg-4">    
      <h2>What's brewing inside?</h2>
        <div class="row">
         <% if @user.campus.present?%>
          <div class="col-lg-6">
          <a href="<%=campus_path(@user.campus.id)%>">
           <div class="featurette-item">
            <div class="adjust">The campus</div>
          <i class="fa fa-coffee"></i> 
             
        </div>
        </a> 
       </div>
       <%end%>
       <div class="col-lg-6">
   <a href="<%=all_campus_path %>">
   <div class="featurette-item">
    <div class="adjust">Across all campuses</div>
          <i class="fa fa-fire"></i>               
        </div>
        </a>
       </div>
  </div>
 </div>
 </div> 
  <div class="row">
   <div class="col-lg-12">
   <% if current_user.id == @user.id %>
       <%= render 'shared/micropost_form' %> 
       <%end%>
       </div>
  </div>
</div>	  
</div>
