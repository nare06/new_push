<h1>Listing groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Short name</th>
      <th>Campus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= group.short_name %></td>
        <td><%= group.campus.name %></td>
        <td><%= link_to 'Show', campus_group_path(group.campus, group) %></td>
        <td><%= link_to 'Edit', edit_campus_group_path(group.campus, group) %></td>
        <td><%= link_to 'Destroy', campus_group_path(group.campus, group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_campus_group_path %>
